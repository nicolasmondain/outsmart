{
  "name": "mobile",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/mobile/src",
  "projectType": "application",
  "tags": ["type:app", "platform:mobile"],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "apps/mobile/www"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "mobile:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "mobile:build:development",
          "hmr": true
        },
        "production": {
          "buildTarget": "mobile:build:production",
          "hmr": false
        }
      }
    },
    "preview": {
      "executor": "@nx/vite:preview-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "mobile:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "mobile:build:development"
        },
        "production": {
          "buildTarget": "mobile:build:production"
        }
      }
    },
    "typecheck": {
      "executor": "@nx/vite:typecheck",
      "options": {}
    },
    "sync": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx cap sync",
        "cwd": "apps/mobile"
      }
    },
    "copy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx cap copy",
        "cwd": "apps/mobile"
      },
      "dependsOn": ["build"]
    },
    "open:android": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx cap open android",
        "cwd": "apps/mobile"
      },
      "dependsOn": ["sync"]
    },
    "open:ios": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx cap open ios",
        "cwd": "apps/mobile"
      },
      "dependsOn": ["sync"]
    },
    "run:android": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx cap run android",
        "cwd": "apps/mobile"
      },
      "dependsOn": ["build", "copy"]
    },
    "run:ios": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx cap run ios",
        "cwd": "apps/mobile"
      },
      "dependsOn": ["build", "copy"]
    },
    "add:android": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx cap add android",
        "cwd": "apps/mobile"
      }
    },
    "add:ios": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx cap add ios",
        "cwd": "apps/mobile"
      }
    }
  }
}
