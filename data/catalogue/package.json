{
  "name": "@outsmart/catalogue",
  "version": "1.0.0",
  "private": true,
  "description": "Data catalogue with OpenTDB trivia questions downloader",
  "scripts": {
    "install:python": "pip install -r requirements.txt",
    "download": "python scripts/opentdb/downloader.py",
    "download:reset": "python scripts/opentdb/downloader.py --reset-tokens",
    "download:dry-run": "python scripts/opentdb/downloader.py --dry-run",
    "clean": "rm -rf raw/opentdb/*",
    "status": "ls -la raw/opentdb/",
    "lint": "flake8 scripts/ && black --check scripts/",
    "format": "black scripts/",
    "test": "pytest scripts/ -v"
  },
  "keywords": [
    "opentdb",
    "trivia",
    "questions",
    "data",
    "python",
    "downloader"
  ],
  "engines": {
    "node": ">=18.0.0",
    "python": ">=3.8.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/outsmart/outsmart",
    "directory": "data/catalogue"
  },
  "author": "Outsmart Team",
  "license": "MIT"
}
